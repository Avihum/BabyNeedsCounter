<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <!-- Stats Dashboard -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:padding="4dp">

        <!-- Pee Count -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_stat_card"
            android:layout_marginEnd="2dp"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/widget_pee_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#EEEEEE"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pee"
                android:textColor="#AAAAAA"
                android:textSize="9sp"
                android:fontFamily="sans-serif"
                android:gravity="center" />
        </LinearLayout>

        <!-- Poop Count -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_stat_card"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’©"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/widget_poop_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#EEEEEE"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poop"
                android:textColor="#AAAAAA"
                android:textSize="9sp"
                android:fontFamily="sans-serif"
                android:gravity="center" />
        </LinearLayout>

        <!-- Time Since Last Feed -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_stat_card"
            android:layout_marginStart="2dp"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ„"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/widget_feed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textColor="#EEEEEE"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last feed"
                android:textColor="#AAAAAA"
                android:textSize="9sp"
                android:fontFamily="sans-serif"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Top Row Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <!-- Poop & Pee Button -->
        <LinearLayout
            android:id="@+id/widget_btn_poop_pee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="3dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_button_yellow"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’©"
                android:textSize="28sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poop"
                android:textColor="#EEEEEE"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Pee Only Button -->
        <LinearLayout
            android:id="@+id/widget_btn_pee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_button_blue"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§"
                android:textSize="28sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pee"
                android:textColor="#EEEEEE"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Feeding Button -->
        <LinearLayout
            android:id="@+id/widget_btn_feed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_button_pink"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ„"
                android:textSize="28sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feed"
                android:textColor="#EEEEEE"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Row - Combo Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <!-- Pee + Feed Button -->
        <LinearLayout
            android:id="@+id/widget_btn_pee_feed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="3dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_button_blue"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§ðŸ„"
                android:textSize="24sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pee+Feed"
                android:textColor="#EEEEEE"
                android:textSize="10sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Poop + Feed Button -->
        <LinearLayout
            android:id="@+id/widget_btn_poop_feed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_button_pink"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’©ðŸ„"
                android:textSize="24sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poop+Feed"
                android:textColor="#EEEEEE"
                android:textSize="10sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
